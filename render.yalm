# render.yaml
services:
  - type: web
    name: career-compass
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn app.main:app --host 0.0.0.0 --port 10000
    envVars:
      - key: WEAVIATE_CLOUD_URL
        sync: false
      - key: WEAVIATE_API_KEY  
        sync: false
      - key: OPENAI_API_KEY
        sync: false
    disk:
      name: models
      mountPath: /app/models
      sizeGB: 1